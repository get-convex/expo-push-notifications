{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "baseUrl": ["."]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "metro.config.mjs",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
